            disconnectWallet() {
                this.account = null;
                this.connected = false;
                
                this.updateConnectionStatus(false);
                this.updateConnectButton('Connect Keplr Wallet');
                
                const walletInterface = document.getElementById('wallet-interface');
                walletInterface.innerHTML = `
