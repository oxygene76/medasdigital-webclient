{
  "name": "medasdigital-webclient",
  "version": "0.9.0",
  "description": "Advanced blockchain web client with Planet 9 visualization for Medas Digital",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-cosmjs": "vite --port 3000 --host",
    "build": "vite build",
    "preview": "vite preview",
    "legacy-start": "python -m http.server 8000",
    "live-dev": "live-server --port=8000 --open=/",
    "deploy": "./scripts/deploy.sh",
    "daemon": "docker run -d --name medas-digital-daemon -p 8080:8080 medas-digital/daemon:latest",
    "test-cosmjs": "echo 'Open browser and run: window.testMedasOsmosisStyle()'"
  },
  "keywords": [
    "blockchain",
    "cosmos",
    "keplr",
    "astronomy",
    "planet9",
    "defi",
    "staking",
    "research",
    "medas-digital",
    "chat",
    "real-time",
    "cosmjs",
    "osmosis-style"
  ],
  "author": "Medas Digital Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/medas-digital-webclient.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/medas-digital-webclient/issues"
  },
  "homepage": "https://yourusername.github.io/medas-digital-webclient",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.6",
    "serve-static": "^1.15.0",
    "@cosmjs/stargate": "^0.32.0",
    "@cosmjs/proto-signing": "^0.32.0",
    "@cosmjs/amino": "^0.32.0",
    "@cosmjs/encoding": "^0.32.0",
    "@cosmjs/math": "^0.32.0",
    "@cosmjs/utils": "^0.32.0",
    "cosmjs-types": "^0.9.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "vite": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-inject": "^5.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "crypto-browserify": "^3.12.0",
    "stream-browserify": "^3.0.0",
    "https-browserify": "^1.0.0",
    "stream-http": "^3.2.0",
    "os-browserify": "^0.3.0",
    "url": "^0.11.0",
    "assert": "^2.0.0",
    "util": "^0.12.0",
    "events": "^3.3.0",
    "path-browserify": "^1.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "daemon": {
      "urls": [
        "http://localhost:8080", 
        "http://127.0.0.1:8080", 
        "http://localhost:8081"
      ],
      "endpoints": {
        "status": "/api/v1/status",
        "messages": "/api/v1/messages",
        "contacts": "/api/v1/contacts",
        "channels": "/api/v1/channels"
      }
    },
    "blockchain": {
      "chainId": "medasdigital-2",
      "rpc": "https://rpc.medas-digital.io:26657",
      "rest": "https://lcd.medas-digital.io:1317"
    },
    "cosmjs": {
      "gasPrice": "0.025umedas",
      "broadcastTimeoutMs": 30000,
      "broadcastPollIntervalMs": 1000
    }
  },
  "browser": {
    "crypto": "crypto-browserify",
    "stream": "stream-browserify",
    "assert": "assert",
    "http": "stream-http",
    "https": "https-browserify", 
    "os": "os-browserify",
    "url": "url",
    "util": "util",
    "events": "events",
    "path": "path-browserify"
  }
}
