{
  "name": "medasdigital-webclient",
  "version": "0.9.0",
  "description": "Advanced blockchain web client with Planet 9 visualization for Medas Digital",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "old-start": "python -m http.server 8000",
    "live-server": "live-server --port=8000 --open=/",
    "build": "echo 'No build step required - static HTML'",
    "deploy": "./scripts/deploy.sh",
    "daemon": "docker run -d --name medas-digital-daemon -p 8080:8080 medas-digital/daemon:latest",
    "test-cors": "node -e \"console.log('Testing CORS proxy...'); require('./test-proxy.js');\""
  },
  "keywords": [
    "blockchain",
    "cosmos",
    "keplr",
    "astronomy",
    "planet9",
    "defi",
    "staking",
    "research",
    "medas-digital",
    "chat",
    "real-time",
    "cors-proxy"
  ],
  "author": "Medas Digital Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/medas-digital-webclient.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/medas-digital-webclient/issues"
  },
  "homepage": "https://yourusername.github.io/medas-digital-webclient",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.6",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "daemon": {
      "urls": [
        "http://localhost:8080", 
        "http://127.0.0.1:8080", 
        "http://localhost:8081"
      ],
      "endpoints": {
        "status": "/api/v1/status",
        "messages": "/api/v1/messages",
        "contacts": "/api/v1/contacts",
        "channels": "/api/v1/channels"
      }
    },
    "blockchain": {
      "chainId": "medasdigital-2",
      "rpc": "https://rpc.medas-digital.io:26657",
      "rest": "https://lcd.medas-digital.io:1317",
      "proxyRpc": "http://localhost:8080/api/rpc",
      "proxyRest": "http://localhost:8080/api/lcd"
    },
    "proxy": {
      "port": 8080,
      "host": "0.0.0.0",
      "targets": {
        "lcd": "https://lcd.medas-digital.io:1317",
        "rpc": "https://rpc.medas-digital.io:26657"
      }
    }
  }
}
